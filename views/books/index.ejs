<% if (books.length > 0) { %>
    <ul>
      <% books.forEach(book => { %>
        <li>
          <h2><%= book.title %></h2>
          <p><strong>Author:</strong> <%= book.author %></p>
          <p><strong>Status:</strong> <%= book.status %></p>
          <p><strong>Description:</strong> <%= book.description || 'No description yet.' %></p>
  
          <a href="/books/<%= book._id %>">View</a> |
          <a href="/books/<%= book._id %>/edit">Edit</a> |
          <form action="/books/<%= book._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No books found.</p>
  <% } %>
  